<p class='buttons'>

    <%= link_to  "Add News", new_admin_news_path, :class => 'button positive' %>
</p>

<p class='buttons'>

    <a href="/admin/lectures/new">Add Lectures</a>
</p>

<table class="admintable">
  <tr class="admintablehd">
    <th width="25%">News Title</th>
    <th width="25%">News Description</th>
    <th width="25%">Photo</th>
    <th width="25%" style="text-align: center !important;">Action</th>
  </tr>

<% @news.each do |news| %>
  <tr>
    <td><%= news.title %></td>
    <td><%= truncate(news.description, :length => 110).html_safe %></td>
    <td><%= image_tag news.news_photo_url(:thumb) if news.news_photo? %></td>
    <td style="text-align: center !important;"> <%= link_to "Edit", edit_admin_news_path(news), :class=>'button positive' %> &nbsp;&nbsp;</td> 
	<td><a href="/admin/news/<%= news.id %>/delete" :onclick="if(confirm('Are you sure you want to delete this Publication?'))  return true;  else  return false;" :class="button negative" >Delete</a></td>
  </tr>
<% end %>
</table>
<br />

