<%= link_to  "Add Gallery", new_admin_picture_path, :class => 'button positive' %>

<table class="admintable">
  <tr class="admintablehd">
    <th width="25%">Title</th>
    
    <th width="25%" style="text-align: center !important;">Action</th>
  </tr>

<% @pictures.each do |picture| %>
  <tr>
    <td><%= picture.title %></td>
   
    <td style="text-align: center !important;"> <a href="/admin/pictures/<%= picture.id %>/show">Show</a>|<%= link_to "Edit", edit_admin_picture_path(picture), :class=>'button positive' %> &nbsp;&nbsp;</td> 
	  <td><a href="/admin/pictures/<%= picture.id %>/delete" :onclick="if(confirm('Are you sure you want to delete this Gallery?'))  return true;  else  return false;" :class="button negative" >Delete</a></td>
	
  </tr>
<% end %>
</table>