<p class='buttons'>

    <%= link_to  "Add Membership", new_admin_membership_path, :class => 'button positive' %>
</p>

<table class="admintable">
  <tr class="admintablehd">
    <th width="25%">Membership Title</th>
    <th width="25%">Membership Description</th>
    <th width="25%" style="text-align: center !important;">Action</th>
  </tr>

<% @memberships.each do |membership| %>
  <tr>
    <td><%= membership.title %></td>
    <td><%= truncate(membership.description, :length => 110).html_safe %></td>
    
    <td style="text-align: center !important;"> <%= link_to "Edit", edit_admin_membership_path(membership), :class=>'button positive' %> &nbsp;&nbsp;</td> 
	<td><a href="/admin/memberships/<%= membership.id %>/delete" :onclick="if(confirm('Are you sure you want to delete this Membership?'))  return true;  else  return false;" :class="button negative" >Delete</a></td>
  </tr>
<% end %>
</table>
<br />

