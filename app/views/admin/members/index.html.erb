<p class='buttons'>

    <%= link_to  "Add Member", new_admin_member_path, :class => 'button positive' %>
</p>


<table class="admintable">
  <tr class="admintablehd">
    <th width="25%">Title</th>
    <th width="25%">Name</th>
    <th width="25%">Email</th>
    <th width="25%">Phone</th>
    <th width="25%">Address</th>
    <th  width="25%">Reg Num</th>			    
    <th  width="25%">Image</th>
    
    <th width="25%" style="text-align: center !important;">Action</th>
  </tr>

<% @members.each do |member| %>
  <tr>
    <td><%= member.title %></td>
    <td><%= member.name %></td>
    <td><%= member.email %></td>
    <td><%= member.phone %></td>
    <td><%= member.address %></td>
    <td><%= member.reg_no %></td>
    <td><%= image_tag member.image_url(:thumb) if member.image? %></td> 
    <td style="text-align: center !important;"> <%= link_to "Edit", edit_admin_member_path(member), :class=>'button positive' %> &nbsp;&nbsp;</td> 
	  <td><a href="/admin/members/<%= member.id %>/delete" :onclick="if(confirm('Are you sure you want to delete this Member?'))  return true;  else  return false;" :class="button negative" >Delete</a></td>
	
    
  </tr>
<% end %>
</table>
<br />