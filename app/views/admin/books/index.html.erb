<%= link_to  "Add Yearbook", new_admin_book_path, :class => 'button positive' %>

<table class="admintable">
  <tr class="admintablehd">
    <th width="25%">Title</th>
    
    <th width="25%" style="text-align: center !important;">Action</th>
  </tr>

<% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
   
    <td style="text-align: center !important;"> <a href="/admin/books/<%= book.id %>/show">Show</a>|<%= link_to "Edit", edit_admin_book_path(book), :class=>'button positive' %> &nbsp;&nbsp;</td> 
	  <td><a href="/admin/books/<%= book.id %>/delete" :onclick="if(confirm('Are you sure you want to delete this Year Book?'))  return true;  else  return false;" :class="button negative" >Delete</a></td>
	
  </tr>
<% end %>
</table>