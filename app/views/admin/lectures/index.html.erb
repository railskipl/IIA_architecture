<p class='buttons'>

    <%= link_to  "Add Lectures", new_admin_lecture_path, :class => 'button positive' %>
</p>

<p class='buttons'>

    <a href="/admin/news/new">Add News</a>
</p>

<table class="admintable">
  <tr class="admintablehd">
    <th width="25%">Lecture Title</th>
    <th width="25%">Lecture Description</th>
    <th width="25%">Photo</th>
    <th width="25%" style="text-align: center !important;">Action</th>
  </tr>

<% @lectures.each do |lecture| %>
  <tr>
    <td><%= lecture.title %></td>
    <td><%= truncate(lecture.description, :length => 110).html_safe %></td>
    
    <td style="text-align: center !important;"> <a href="/admin/lectures/<%= lecture.id %>">Show</a>|<%= link_to "Edit", edit_admin_lecture_path(lecture), :class=>'button positive' %> &nbsp;&nbsp;</td> 
	<td><a href="/admin/lectures/<%= lecture.id %>/delete" :onclick="if(confirm('Are you sure you want to delete this Publication?'))  return true;  else  return false;" :class="button negative" >Delete</a></td>
  </tr>
<% end %>
</table>
