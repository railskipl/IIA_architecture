<p class='buttons'>

    <%= link_to  "Add Publications", new_admin_publication_path, :class => 'button positive' %>
</p>

<table class="admintable">
  <tr class="admintablehd">
    <th width="25%">Title</th>
    <th width="25%">Author</th>
    <th width="25%">Description</th>
    <th width="25%" style="text-align: center !important;">Action</th>
  </tr>

<% @publications.each do |publication| %>
  <tr>
    <td><%= publication.title %></td>
    <td><%= publication.author %></td>
    <td><%= truncate(publication.description, :length => 110).html_safe %></td>
    <td style="text-align: center !important;"> <%= link_to "Edit", edit_admin_publication_path(publication), :class=>'button positive' %> &nbsp;&nbsp;</td> 
	<td><a href="/admin/publications/<%= publication.id %>/delete" :onclick="if(confirm('Are you sure you want to delete this Publication?'))  return true;  else  return false;" :class="button negative" >Delete</a></td>
	
    
  </tr>
<% end %>
</table>
<br />