<%= form_for [:admin, @publications], :html => { :multipart => true } do |f| %>
	
	  <p>
	    <%= f.label :title %>
	    <%= f.text_field :title, :class => 'text' %>
	  </p>
	   <p>
	    <%= f.label :author %>
	    <%= f.text_field :author, :class => 'text' %>
	  </p>
	   <p>
	    <%= f.label :description %>
	    <%= f.text_area :description, :class => 'tiny_mce' %>
	  </p>
	    
	  <p>
	    <%= f.file_field :pdf%>
	  </p>
	
	  
	 <%= render :partial =>"button" %>
	
	<% end %>

