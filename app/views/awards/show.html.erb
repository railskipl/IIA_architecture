<h1>Award / Achivements</h1>
<div class="award_wrap">
	<div class="award_profile">
		
			<% album = Album.find_by_award_id(@awards.id, :limit => 1)%>
			<%= image_tag album.photo_url(:big_thumb) %>
	</div>
	<div class="award_details">
		<span class="award_heading"><%= @awards.title%></span>
		<p><%= @awards.description%></p>
	</div>	
	<div id="gallery">
		<ul>
			<% albums = Album.find_all_by_award_id(@awards.id)%>
			<% albums.each do |album| %>
				<li>
					<%= link_to image_tag(album.photo.url(:mid_thumb)), album.photo.url() %>
				</li>
			<% end %>
			
		</ul>
	</div>	
	
</div>
